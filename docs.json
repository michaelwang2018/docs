{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mielto API Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "quickstart-conversations",
              "api-reference/introduction"
            ]
          }
        ]
      },
      {
        "tab": "OpenAPI Reference",
        "openapi": "api-reference/openapi.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Go to Mielto Dashboard",
          "href": "https://mielto.com/dashboard",
          "icon": "brain"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      { "label": "Support", "href": "mailto:support@mielto.com" }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://mielto.com/dashboard"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mieltoinc",
      "github": "https://github.com/mieltoinc",
      "linkedin": "https://linkedin.com/company/mieltoinc"
    }
  }
}